<main>

    <div class="backgroundgame" style="background-image: url({{thumbnail}});">
        <div>
        </div>
    </div>

    <div class="contentpos">



        <div class="contentviewgame">

            <div>
                <img src="{{img}}" class="covergame" alt="">

            </div>

            <div class="containerinfo">
                <h2>{{title}}</h2>

                <dir class="containerinfo__price">
                    <div>
                        <h3>Precio:</h3>
                        <h2>${{price}}</h2>
                    </div>

                    <div>
                        <a href="">
                            <img src="/images/addcart.png" class="containerinfo__addcart addtocart"
                                data-name="{{this._id}}" alt="">
                        </a>
                    </div>

                    <div>
                        <a href="/carro_de_compras">
                            <img src="/images/buy.png" class="containerinfo__buyicon buynow" data-name="{{this._id}}"
                                alt="">
                        </a>
                    </div>

                </dir>

                <div class="contentviewgame__platform">

                    <h3>Plataforma:</h3>
                    <img src="{{iconplat}}" alt="">
                    <p>{{platform}}</p>

                </div>
                <div class="contentviewgame__gallery">
                    <h3>Galeria:</h3>

                </div>

                <div class="contentviewgame__imgs">
                    <a href="{{img1}}" class="venobox" data-gall="myGallery">
                        <img src="{{img1}}" alt="">

                    </a>
                    <a href="{{img2}}" class="venobox" data-gall="myGallery">
                        <img src="{{img2}}" alt="">
                    </a>

                    <a href="{{img3}}" class="venobox" data-gall="myGallery">
                        <img src="{{img3}}" alt="">
                    </a>

                </div>



            </div>




        </div>
        <div class="bodycontent">

            <div class="bodycontent__view">
                <h2>Descripcion</h2>
                <br>
                <p>{{description}}</p>
                <br>
                <h3>Genero:</h3>{{genre}}
                <br>
                <br>
                <h3>Tipo:</h3> {{type}}
                <br>
                <br>
                <h3>Año de lanzamiento: </h3> {{year}}
                <br>
                <br>
                <h3>Ranking de popularidad:</h3> {{popularity}}
                <br>
                <br>
                <h3>Requisitos minimos:</h3>
                <p>
                    {{{requerimentsm}}}
                </p>
                <br>
                <h3>Requisitos recomendados:</h3>
                <p>
                    {{{requerimentsr}}}
                </p>
                

            </div>

        </div>


    </div>





    <script type="text/javascript" src="https://code.jquery.com/jquery-latest.min.js"></script>
    <script src="/scripts/initvenobox.js"></script>
    <script type="text/javascript" src="/scripts/venobox.min.js"></script>
    
</main>