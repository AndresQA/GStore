<header>
    <div class="mainnav">
        <div class="mainnav__logo">
            <a href="/productos">
                <img src="/images/logo.png" class="mainnav__logoimg" alt="">
            </a>
        </div>

        <div class="mainnav__logohamb">
            <div>
                <img src="/images/menu.png" class="mainnav__logoimg" alt="">
            </div>
        </div>

        <nav>
            <ul>
                <li><a href="/productos">Catálogo</a></li>
                <li><a href="/productos/{{sort.year:-1}}">Más vendidos</a></li>
                <li><a href="#galery">Ofertas</a></li>
            </ul>

        </nav>
        <input type="search" class="mainnav__search" placeholder="Buscar...">
        <div class="mainnav__options">
            <img src="/images/userimg.png" class="mainnav__img" alt="">
        </div>
        <div class="mainnav__logo">

            <div class="cartandcount">
                <a href="/carro_de_compras">
                    <img src="/images/car.png" class="mainnav__img" alt="">
                    <p class="counter_products"></p>
                </a>
            </div>

        </div>


    </div>


</header>


<main>
    <div class="content">
        <!--
            <H2>Resultados de la busqueda</H2>
        -->
        <div class="content__products">

            <div class="content__filter">

                <h3>Plataforma</h3>

                {{#if filtros.Steam }}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Plataforma/Steam"
                    id="Steam">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Plataforma/Steam" id="Steam">
                {{/if}}

                <label class="filterlabel" for="Steam">Steam</label>
                <br>
                {{#if filtros.Origin}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Plataforma/Origin"
                    id="Origin">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Plataforma/Origin" id="Origin">
                {{/if}}
                <label class="filterlabel" for="Origin">Origin</label>
                <br>
                {{#if filtros.Epic}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Plataforma/Epic" id="Epic">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Plataforma/Epic" id="Epic">
                {{/if}}
                <label class="filterlabel" for="Epic">Epic Games Store</label>
                <br>

                <h3>Genero</h3>
                {{#if filtros.FPS}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Genero/FPS" id="FPS">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Genero/FPS" id="FPS">
                {{/if}}
                <label class="filterlabel" for="FPS">FPS</label>
                <br>
                {{#if filtros.Carreras}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Genero/Carreras"
                    id="Carreras">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Genero/Carreras" id="Carreras">
                {{/if}}
                <label class="filterlabel" for="Carreras">Carreras</label>
                <br>
                {{#if filtros.RPG}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Genero/RPG" id="RPG">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Genero/RPG" id="RPG">
                {{/if}}
                <label class="filterlabel" for="RPG">RPG</label>
                <br>
                {{#if filtros.Aventura}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Genero/Aventura"
                    id="Aventura">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Genero/Aventura" id="Aventura">
                {{/if}}
                <label class="filterlabel" for="Aventura">Aventura</label>
                <br>

                <h3>Tipo</h3>
                {{#if filtros.Juego}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Tipo/Juego" id="Juego">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Tipo/Juego" id="Juego">
                {{/if}}
                <label class="filterlabel" for="Juego">Juego</label>
                <br>
                {{#if filtros.DLC}}
                <input checked class="filter-option" type="checkbox" name="checkbox" value="Tipo/DLC" id="DLC">
                {{else}}
                <input class="filter-option" type="checkbox" name="checkbox" value="Tipo/DLC" id="DLC">
                {{/if}}
                <label class="filterlabel" for="DLC">DlC</label>
                <br>


            </div>

            <div class="content__productsGames">
                <div class="content__productsorder">
                    <div>
                        <h3>Resultados encontrados</h3>
                    </div>
                    <div class="listorder">
                        <img src="/images/orderby.png" alt="">
                        <h3>Ordenar por</h3>
                    </div>
                </div>

                <div class="orderlistview">
                    <div>
                    {{#if filtros.Mayor}}
                    <input checked class="filter-order" class="" type="radio" name="precio" value="price/1"
                        id="lestomost">
                    {{else}}
                    <input class="filter-order" class="" type="radio" name="precio" value="price/1" id="lestomost">
                    {{/if }}
                    <label for="lestomost">Precio: Bajo a alto</label>
                    </div>

                    <div>
                    {{#if filtros.Menor}}
                    <input checked class="filter-order" class="" type="radio" name="precio" value="price/-1" id="mosttoles">
                    {{else}}
                    <input class="filter-order" class="" type="radio" name="precio" value="price/-1" id="mosttoles">
                    {{/if}}
                    <label for="mosttoles">Precio: Alto a bajo</label>
                    </div>

                    <div>
                    {{#if filtros.P}}
                    <input checked class="filter-order" class="" type="radio" name="precio" value="popularity/1"
                        id="mostpopular">
                    {{else}}
                    <input class="filter-order" class="" type="radio" name="precio" value="popularity/1"
                        id="mostpopular">
                    {{/if}}
                    <label for="mostpopular">Lo mas popular primero</label>
                        
                    </div>

                    <div>
                    {{#if filtros.Years}}
                    <input checked class="filter-order" class="" type="radio" name="precio" value="year/-1" id="recent">
                    {{else}}
                    <input class="filter-order" class="" type="radio" name="precio" value="year/-1" id="recent">
                    {{/if}}
                    <label for="recent">Lanzamiento mas reciente</label>
                    </div>
                    
                </div>


                <div class="content__games">

                    {{#each products}}
                    <div class="game">
                        <a href="/juego/{{title}}" class="linkgame">
                            <img src="{{img}}" class="game__img" alt="">
                            <div>

                                <div class="gametitle">
                                    <h3>{{title}}</h3>
                                </div>
                                <div class="gameprice">
                                    <h4>${{price}} COP</h4>

                                </div>
                            </div>

                        </a>
                    </div>
                    {{/each}}

                </div>

            </div>

            <div>

            </div>

        </div>
    </div>


    



</main>